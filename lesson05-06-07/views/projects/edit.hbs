<h1>
  {{title}}
</h1>
<form method="POST">
  {{! Input names have to match the name of the fields in the mongo schema object }}
  {{! Mapping is not automatic, but it's best practices }}
  <fieldset>
    <label for="name" class="col-2">
      Name:
    </label>
    <input name="name" id="name" required value="{{project.name}}" />
  </fieldset>
  <fieldset>
    <label for="dueDate" class="col-2">
      Due Date:
    </label>
    <input name="dueDate" id="dueDate" required value="{{project.dueDate}}" />
  </fieldset>
  <fieldset>
    <label for="course" class="col-2">
      Course:
    </label>
    {{! <input name="course" id="course" required /> }}
    <select name="course" id="course">
      {{#each courses}}
       {{ createOptionElement this.name ../project.course}}
      {{/each}}
    </select>
  </fieldset>z
  <fieldset>
    <label for="status" class="col-2">
      Status:
    </label>
    {{! <input name="course" id="course" required /> }}
    <select name="status" id="status">
      {{ createOptionElement "TO DO" project.course}}
	  {{ createOptionElement "IN PROGRESS" project.course}}
	  {{ createOptionElement "DONE" project.course}}
    </select>
  </fieldset>
  {{! No need to specify Status since it has a default value }}
  {{! Button needs to be inside <form> element to trigger POST }}
  <button class="offset-3 btn btn-success">
    Save
  </button>
</form>