<h1>{{title}}</h1>
{{!-- CRUD Functionality --}}
{{!-- CREATE button --}}
<a href="/projects/add" class="btn btn-primary">Add a new project</a>
{{!-- READ Show Table to view all projects in db --}}
<table class="table table-striped table-hover">
    <thead>
        <th>Name</th>
        <th>Due Date</th>
        <th>Course</th>
        <th>Status</th>
    </thead>
    <tbody>
        {{!-- Retrieve all projects and loop --}}
        {{#each dataset}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.dueDate}}</td>
            <td>{{this.course}}</td>
            <td>{{this.status}}</td>
			<td>
				<a href="/projects/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
				<a href="/projects/delete/{{this._id}}" class="btn btn-danger btn-sm" onclick="return confirmDeletion()">Delete</a>
			</td>
        </tr>
        {{/each}}
    </tbody>
</table>